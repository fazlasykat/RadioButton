<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="#fcff58"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_gender_text"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        android:textColor="#000"
        />

    <RadioGroup
        android:id="@+id/raidoGroupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <RadioButton
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/male_gender_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/female_gender_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"/>






    </RadioGroup>



    <Button
        android:id="@+id/showBtnId"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#463f3f"
        android:text="@string/btn_text"
        android:textColor="#fcfbfb"
        android:textSize="20sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/showTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>



</LinearLayout>